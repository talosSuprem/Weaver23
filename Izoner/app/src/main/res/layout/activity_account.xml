<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.talos.weaver.AccountActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarAccount"
        app:title="Acount"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_black_24dp"
            android:id="@+id/user_profile_image"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/user_profile_image"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:id="@+id/user_channel_name"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:layout_below="@+id/user_channel_name"
            android:layout_toEndOf="@+id/user_profile_image"
            android:textSize="14sp"

            />






    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:id="@+id/view"/>

    <LinearLayout
        android:id="@+id/center"
        android:theme="@style/Widget.Design.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txt_channel_name"
            android:background="@drawable/ripple_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Channel"
            android:textSize="18dp"
            android:drawableTint="#202020"
            android:padding="5dp"
            android:drawablePadding="20dp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_round_history_24"/>
        <TextView
            android:id="@+id/txt_settings"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18dp"
            android:padding="5dp"
            android:drawableTint="#202020"
            android:drawablePadding="20dp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_round_videocam_24"/>

        <TextView
            android:id="@+id/txt_help"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help and feedback"
            android:textSize="18dp"
            android:padding="5dp"
            android:drawableTint="#202020"
            android:drawablePadding="20dp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_round_arrow_downward_24"/>

    </LinearLayout>


</RelativeLayout>