<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".FirstFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="35dp">

                <ProgressBar
                    android:id="@+id/progress_bar1"
                    style="@style/CircularDeterminateProgressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:foreground="@mipmap/ic_launcher_foreground"

                    tools:progress="60" />


                <ImageView
                    android:id="@+id/infoalgo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"

                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_outline_info" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>


            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Coins:"
                    android:textColor="?attr/tc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/coinTv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_infocase"
                    android:gravity="right"
                    android:text="000000000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Tokens :"
                    android:textColor="?attr/tc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/usercoin"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_infocase"
                    android:gravity="right"
                    android:text="000000000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Wallet value"
                    android:textColor="?attr/tc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/valueTV"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_infocase"
                    android:gravity="right"
                    android:text="000000000000" />

            </LinearLayout>


            <Button
                android:id="@+id/weavButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/cust_infocase4"

                android:text="Generate your NFT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actuall value:  "
                    android:textColor="?attr/tc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="0,000000001$"
                    android:textColor="?attr/tc" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cust_infocase3"
                    android:drawableStart="@drawable/iconpaypal"

                    android:text="Convert your's WeaverCoins" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show add to get more points" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gentoken1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cust_infocase3"
                    android:text="get 1 point" />

                <Button
                    android:id="@+id/gentoken3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cust_infocase3"
                    android:text="get 5 points" />

                <Button
                    android:id="@+id/gentoken4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cust_infocase3"
                    android:text="get 10 points" />

                <Button
                    android:id="@+id/gentoken2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cust_infocase3"
                    android:text="Share app" />

            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

















</RelativeLayout>